{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "globals": {
		"driver": true,
        "translations": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": 1,
        "func-names": 0,
        "max-len": ["error", 150],
        "eol-last": 0,
        "prefer-arrow-callback": 1,
        "space-before-function-paren": 1,
        "prefer-template" : 0,
        "arrow-body-style": 1,
        "class-methods-use-this": 0,
        "no-useless-constructor": 1
    }
}
